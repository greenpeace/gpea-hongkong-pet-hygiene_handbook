:root {
  --default-font-family: -apple-system, BlinkMacSystemFont, "Segoe UI",
    "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "Helvetica Neue",
    Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji",
    "Segoe UI Symbol";
  --black: #000;
  --white: #fff;
  --gp-green: #66cc00;
  --orange: #ff9500;
  --gp-dark-blue: #292f47;
  --gray: #d9d9d9;
  --light-gray: #f5f5f5;
}

.enform__wrapper {
  display: none;
}

main {
  position: relative;
}

.header {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 60px;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 8px;
}
.header .gp-logo {
  max-width: 120px;
}

.bg-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  background-color: var(--gp-dark-blue);
  background-image: url("c9d9d5590fba4a75b46921b02e9ff15e");
  background-size: cover;
  background-position: center center;
  background-repeat: repeat;
}

.card {
  margin: 80px auto 60px;
  background-color: #fff;
}
.footer {
  background-color: #1a1c26;
  color: #fff;
  padding-top: 3rem;
  font-size: 0.8rem;
}
.footer p {
  font-size: 0.8rem;
}
.footer .gp-logo {
  max-width: 180px;
  margin-bottom: 1rem;
}

.footer__link ul {
  min-height: 120px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-end;
}