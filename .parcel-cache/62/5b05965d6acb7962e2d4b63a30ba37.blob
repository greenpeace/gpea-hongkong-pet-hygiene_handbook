@import "./assets/css/font-awesome.css";
@import "./assets/css/nucleo-icons.css";
@import "./assets/css/nucleo-svg.css";
@import "./assets/css/argon-design-system.css";
@import url("https://fonts.googleapis.com/css?family=Noto+Sans+HK:400,700,900");
html {
  font-size: 100%;
}

body {
  font-family: "Noto Sans HK", Microsoft JhengHei, "PingFang HK", "Helvetica Neue", "Heiti TC", "Microsoft JhengHei", Arial, sans-serif;
  font-size: 1rem;
  line-height: 1.5;
  color: var(--text);
  /*
  @media (max-width: 575.98px) {
    body {
      font-size: 14px;
    }
  }
  */
}

p {
  letter-spacing: 1px;
  margin-bottom: 1.15rem;
  text-align: justify;
  word-break: break-all;
}

h1,
h2,
h3,
h4,
h5 {
  margin: 2.75rem 0 1.05rem;
  line-height: 1.15;
  font-weight: bold;
}

h1 {
  margin-top: 0;
  font-size: 4.209em;
}

h2 {
  font-size: 3.157em;
}

h3 {
  font-size: 2.369em;
}

h4 {
  font-size: 1.777em;
}

h5 {
  font-size: 1.333em;
}

small,
.text_small {
  font-size: 0.75em;
}

/*==========Firefox: remove the dotted outline==========*/
a:focus,
a:active,
button,
input[type=reset]::-moz-focus-inner,
input[type=button]::-moz-focus-inner,
input[type=submit]::-moz-focus-inner,
select::-moz-focus-inner,
input[type=file] > input[type=button]::-moz-focus-inner {
  outline: 0 !important;
}

button:focus,
button:active {
  outline: 0 !important;
}

a,
a:link,
a:hover,
a:active,
a:visited {
  text-decoration: none !important;
}

:root {
  --default-font-family: -apple-system, BlinkMacSystemFont, "Segoe UI",
    "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "Helvetica Neue",
    Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji",
    "Segoe UI Symbol";
  --black: #000;
  --white: #fff;
  --gp-green: #66cc00;
  --orange: #ff9500;
  --gp-dark-blue: #292f47;
  --gray: #d9d9d9;
  --light-gray: #f5f5f5;
}

main {
  position: relative;
}

.header {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 60px;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0.5rem;
}
.header .gp-logo {
  max-width: 120px;
  padding: 4px;
  background-color: #6c0;
}

.bg-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  background-color: #fafafa;
  background-image: url("./assets/images/testimonial_bg.svg");
  background-repeat: no-repeat;
  background-size: cover;
}

.card {
  margin: 60px auto 4rem;
  border-radius: 4px;
  background-color: #fff;
}
.card .card-body {
  color: #fff;
  background-color: var(--gp-dark-blue);
}
.card .card-body h1 {
  font-size: 1.6rem;
  color: #fff;
  font-weight: bold;
}
.card .card-body small {
  font-size: 0.8rem;
}
.card .card-body .btn--download {
  background-color: var(--orange);
  color: #fff;
}
.card .form__wrapper .input-group-message {
  display: block;
  font-size: 0.8rem;
  margin-top: 4px;
  color: red;
}
.card .form__wrapper .input-group-message .email-suggestion {
  cursor: pointer;
  text-decoration: underline;
}

.footer {
  background-color: #1a1c26;
  color: #fff;
  padding-top: 3rem;
  font-size: 0.8rem;
}
.footer p {
  font-size: 0.8rem;
}
.footer .gp-logo {
  max-width: 180px;
  margin-bottom: 1rem;
}

.footer__link ul {
  min-height: 120px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-end;
}